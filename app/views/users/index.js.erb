$(function () {
    $('.change-btn').on('click', function () {
        $('.change-btn').removeClass('active');
        $(this).addClass('active');
    })

    if($('#reviews-area').children().get(0) === $('.user-reviews').get(0)) {
        $("#reviews-area").html("<%= j(render 'user_favorite_reviews') %>");
    }else {
        $("#reviews-area").html("<%= j(render 'user_reviews') %>");
    }
})
